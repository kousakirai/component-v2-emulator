{
  "name": "discord-component-preview",
  "displayName": "Discord Component Preview",
  "description": "Preview discord.py ComponentV2 (Buttons, SelectMenus, etc.) in VS Code",
  "version": "0.2.0",
  "publisher": "kousakirai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kousakirai/component-v2-emulator"
  },
  "homepage": "https://github.com/kousakirai/component-v2-emulator#readme",
  "bugs": {
    "url": "https://github.com/kousakirai/component-v2-emulator/issues"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "discord-preview.showPreview",
        "title": "Show Component Preview",
        "category": "Discord",
        "icon": "$(preview)"
      },
      {
        "command": "discord-preview.insertTemplate",
        "title": "Insert Component Template",
        "category": "Discord",
        "icon": "$(add)"
      },
      {
        "command": "discord-preview.showPresetPicker",
        "title": "Insert Component Preset",
        "category": "Discord"
      },
      {
        "command": "discord-preview.saveAsPreset",
        "title": "Save Selection as Preset",
        "category": "Discord"
      },
      {
        "command": "discord-preview.editComponent",
        "title": "Edit Component",
        "category": "Discord",
        "icon": "$(edit)"
      },
      {
        "command": "discord-preview.refresh",
        "title": "Refresh Preview",
        "category": "Discord",
        "icon": "$(refresh)"
      },
      {
        "command": "discord-preview.openUIBuilder",
        "title": "Open UI Builder (LayoutView)",
        "category": "Discord",
        "icon": "$(layout)"
      },
      {
        "command": "discordComponents.showVersionInfo",
        "title": "Show discord.py Version Info",
        "category": "Discord"
      },
      {
        "command": "discordComponents.refreshVersion",
        "title": "Refresh discord.py Version",
        "category": "Discord"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == python",
          "command": "discord-preview.showPreview",
          "group": "discord@1"
        },
        {
          "when": "resourceLangId == python",
          "command": "discord-preview.editComponent",
          "group": "discord@2"
        },
        {
          "when": "resourceLangId == python",
          "command": "discord-preview.insertTemplate",
          "group": "discord@3"
        },
        {
          "when": "resourceLangId == python",
          "command": "discord-preview.openUIBuilder",
          "group": "discord@4"
        }
      ],
      "commandPalette": [
        {
          "command": "discord-preview.showPreview"
        },
        {
          "command": "discord-preview.insertTemplate"
        },
        {
          "command": "discord-preview.showPresetPicker"
        },
        {
          "command": "discord-preview.saveAsPreset"
        },
        {
          "command": "discord-preview.editComponent"
        },
        {
          "command": "discord-preview.refresh"
        },
        {
          "command": "discord-preview.openUIBuilder"
        },
        {
          "command": "discordComponents.showVersionInfo"
        },
        {
          "command": "discordComponents.refreshVersion"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.19.130",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.40.0",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "typescript": "^5.0.0"
  }
}
